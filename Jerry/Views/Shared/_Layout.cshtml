<!DOCTYPE html>
<html>
<head>
    @*<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">*@
    <title>@ViewBag.Title - Sistema de control Jerry</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- BOOTSTRAP STYLES-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Scripts/morris/morris-0.4.3.min.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="~/Content/jquery.datetimepicker.min.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    @*<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />*@
    <link href="~/Content/RogelioCSS.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<a class="navbar-brand" href="~/Views/Home/Index.cshtml">Binary admin</a>*@               
                   <ul class="navbar-brand">
                        <li>@Html.ActionLink("Inicio", "Index", "Home","",new { style="color:white"})</li>
                   </ul>
            </div>
            <div class="navbar-collapse collapse" >
                @*Bienvenido &nbsp;@Html.ActionLink("Login", "Login", "Account", "", htmlAttributes: new { @class = "btn btn-danger square-btn-adjust" })*@
                        @Html.Partial("_LoginPartial")
            </div>
                
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        <img src="~/Images/logo.png" class="user-image img-responsive" />
                    </li>

                    @if (User.IsInRole("Estandar") || User.IsInRole("Administrador"))
                    {
                        <li class="aside hidden-print">
                            @*<a class="active-menu" href="index.html"><i class="fa fa-dashboard fa-3x"></i> Dashboard</a>*@
                            @Html.ActionLink(" Clientes", "Index", "Clientes", "", new { @class = "fa fa-user fa-2x" })
                        </li>
                    }
                    
                    @if (User.IsInRole("Estandar") || User.IsInRole("Administrador"))
                    {
                        <li class="aside hidden-print">
                            @*<a href="ui.html"><i class="fa fa-desktop fa-3x"></i> UI Elements</a>*@
                            @Html.ActionLink(" Contact", "Contact", "Home", "", new { @class = "fa fa-desktop fa-2x" })
                        </li>
                    }
                   
                    @if (User.IsInRole("Estandar") || User.IsInRole("Administrador"))
                    {
                        <li class="aside hidden-print">
                            @*<a href="tab-panel.html"><i class="fa fa-qrcode fa-3x"></i> Tabs & Panels</a>*@
                            @Html.ActionLink(" Reservación", "Index", "Reservacion", "", new { @class = "fa fa-calendar fa-2x" })
                        </li>
                    }

                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="aside hidden-print">
                            @*<a href="chart.html"><i class="fa fa-bar-chart-o fa-3x"></i> Morris Charts</a>*@
                            @Html.ActionLink(" Configuración", "Details", "Correo", new { id = 1 }, new { @class = "fa fa-envelope fa-2x" })
                        </li>
                    }
                    

                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - @Html.RouteLink("netcode", new { }, new { href = "http://netcodesolutions.net/" }) </p>
                </footer>
            </div>
        </div>
    </div>


            <script src="~/Scripts/jquery-1.10.2.js"></script>
            <script src="~/Scripts/bootstrap.min.js"></script>
            <script src="~/Scripts/jquery.metisMenu.js"></script>
            <script src="~/Scripts/morris/raphael-2.1.0.min.js"></script>
            <script src="~/Scripts/morris/morris.js"></script>
            <script src="~/Scripts/custom.js"></script>
            <script src="~/Scripts/jquery.datetimepicker.full.min.js"></script>
            <script src="~/Scripts/jquery.maskedinput.js"></script>
            <script src="~/Scripts/JavascriptRogelio.js"></script>
            @RenderSection("scripts", required: false)

</body>


</html>
