<!DOCTYPE html>
<html>
<head>
    @*<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">*@
    <title class="hidden-print">@ViewBag.Title - Sistema de control Quintaventura</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @Styles.Render("~/Content/template")
    @Styles.Render("~/Content/icons")
    @Styles.Render("~/Content/jqueryui")
</head>
<body>
    <div id="wrapper">
        
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                         
                <ul class="navbar-brand">
                    <li class="text-center">
                    <a href="@Url.Action("Index","Home", new { style = "color:white" })">
                        <img src="~/Images/logo.png" />
                    </a>
                    </li>
                </ul>
            </div>
            <div class="navbar-collapse collapse" >
                @*Bienvenido &nbsp;@Html.ActionLink("Login", "Login", "Account", "", htmlAttributes: new { @class = "btn btn-danger square-btn-adjust" })*@
                        @Html.Partial("_LoginPartial")
            </div>
                
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        @*<img src="~/Images/logo.png" class="user-image img-responsive"/>*@
                    </li>

                    @if (User.IsInRole("Estandar") || User.IsInRole("Administrador"))
                    {
                        <li class="aside hidden-print">
                            @*<a class="active-menu" href="index.html"><i class="fa fa-dashboard fa-3x"></i> Dashboard</a>*@
                            @Html.ActionLink(" Clientes", "Index", "Clientes", "", new { @class = "fa fa-user fa-2x" })
                        </li>
                    }
                    
                    @if (User.IsInRole("Estandar") || User.IsInRole("Administrador"))
                    {
                        <li class="aside hidden-print">
                            @*<a href="ui.html"><i class="fa fa-desktop fa-3x"></i> UI Elements</a>*@
                            @Html.ActionLink(" Contact", "Contact", "Home", "", new { @class = "fa fa-desktop fa-2x" })
                        </li>
                    }
                   
                    @if (User.IsInRole("Estandar") || User.IsInRole("Administrador"))
                    {
                        <li class="aside hidden-print">
                            @*<a href="tab-panel.html"><i class="fa fa-qrcode fa-3x"></i> Tabs & Panels</a>*@
                            @Html.ActionLink(" Reservación", "Index", "Reservacion", "", new { @class = "fa fa-calendar fa-2x" })
                        </li>
                    }

                    @if (User.IsInRole("Estandar") || User.IsInRole("Administrador"))
                    {
                        <li class="aside hidden-print">
                            @*<a href="tab-panel.html"><i class="fa fa-qrcode fa-3x"></i> Tabs & Panels</a>*@
                            @Html.ActionLink(" Banquete", "Index", "Banquetes", "", new { @class = "fa fa-cutlery fa-2x" })
                        </li>
                    }

                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="aside hidden-print">
                            @*<a href="chart.html"><i class="fa fa-bar-chart-o fa-3x"></i> Morris Charts</a>*@
                            @Html.ActionLink(" Configuración", "Details", "Correo", new { id = 1 }, new { @class = "fa fa-envelope fa-2x" })
                        </li>
                    }
                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div class="container body-content">
                @RenderBody()
            </div>
            <hr class="hidden-print" />
            <footer class="hidden-print">
                <p>&copy; @DateTime.Now.Year - Dev. By @Html.RouteLink("Netcode", new { }, new { href = "http://netcodesolutions.net/" }) </p>
            </footer>
        </div>
    </div>
            
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/template")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
            $("input[type='datetime']").datetimepicker();
    </script>

</body>
</html>
