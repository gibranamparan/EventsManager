@using Jerry.Models
@model Jerry.Models.Cliente

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Reservacion newRes = new Reservacion();
    newRes.clienteID = Model.clienteID;
}

<div class="col-md-12">
    <p>
        <a href="@Url.Action("Index")">
            <i class="glyphicon glyphicon-arrow-left"></i> Regresar a Lista de Clientes
        </a>
    </p>
</div>

<div class="panel panel-info">
    <div class="panel-heading">
        <span class="panel-title">
            Información del Cliente
        </span>
    </div>
    <div class="panel-body">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.nombre, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <p class="form-control-static">@Html.DisplayFor(model => model.nombreCompleto)</p>
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.nombre, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <p class="form-control-static">@Html.DisplayFor(model => model.telefono)</p>
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.nombre, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <p class="form-control-static">@Html.DisplayFor(model => model.email)</p>
            </div>

            <a href="@Url.Action("Edit", new { id = Model.clienteID })">
                <i class="fa fa-pencil-square-o"></i> Editar
            </a>
        </div>
    </div>
</div>

@Html.Partial("../Reservacion/Partial_CreateReservacion", newRes)

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Reservaciones</h3>
    </div>
    <div class="panel-body">
        @Html.Partial("../Reservacion/Partial_Reservaciones", Model.reservaciones)
    </div>
</div>


@section Scripts{
    
<script>
    inicializarInterfazRequerimientos();
</script>
    
}