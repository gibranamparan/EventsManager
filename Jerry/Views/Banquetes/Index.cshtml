@model IEnumerable<Jerry.Models.Banquete>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a href="@Url.Action("Create")">
        <i class="glyphicon glyphicon-plus-sign"></i> Nuevo Banquete
    </a>
</p>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Banquetes</h3>
    </div>
    
    <div class="panel-body">
        <table class="table table-hover table-striped datatable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.cliente.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaBanquete)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcionServicio)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.cliente.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaBanquete)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcionServicio)
                    </td>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.banqueteID })">
                            <i class="fa fa-list-alt"></i> Detalle
                        </a> <br />
                        <a href="@Url.Action("Edit", new { id = item.banqueteID })">
                            <i class="fa fa-pencil-square-o"></i> Editar
                        </a> <br />
                        <a href="@Url.Action("Delete", new { id = item.banqueteID })">
                            <i class="glyphicon glyphicon-remove"></i> Borrar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>
</div>
