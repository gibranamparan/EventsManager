@model Jerry.Models.Banquete

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <a href="@Url.Action("Index")">
        <i class="glyphicon glyphicon-arrow-left"></i> Regresar a Lista Banquetes
    </a>
</div>

<h3>¿Deseas borrar este registro?</h3>
<div class="panel panel-info">
    <div class="panel-heading">
        Borrar Banquete
    </div>
    <div class="panel-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.cliente.nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.cliente.nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.fechaBanquete)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.fechaBanquete)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.telefono)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.telefono)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.descripcionServicio)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.descripcionServicio)
                </dd>

            </dl>
        </div>
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
